<div id="<%= modalid %>" class="modal fade" tabindex="-1" role="dialog" data-date-format="<%= dateFormat %>">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><%= this.__('history-of-balance') %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="<%= this.__('close') %>"></button>
            </div>
            <div class="modal-body p-0">
                <% if (balances.length > 0) { %>
                    <div class="list-group">
                        <% balances.forEach(balance => { %>
                            <div class="list-group-item flex-column align-items-start border-0 py-3">
                                <div class="d-flex flex-wrap justify-content-between w-100">
                                    <span class="fs-md mb-2" data-date="<%= balance.date %>"></span>
                                    <span class="fs-md mb-2 <%= balance.plus ? 'text-success' : 'text-danger' %>"><%= balance.amount %></span>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="alert alert-info text-center m-3" role="alert">
                        <%= this.__('history-of-balance-empty') %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
