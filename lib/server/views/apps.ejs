<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title><%= this.__('install-app-title') %></title>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Ubuntu', sans-serif;
        }

        a {
            text-decoration: none;
        }

        .box {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .box div {
            text-align: center;
        }

        .logo {
            max-height: 48px;
            margin-bottom: 48px;
        }

        .title {
            font-size: 1.5em;
            margin-bottom: 48px;
        }

        .subtitle {
            font-size: 1.2em;
            margin-bottom: 48px;
        }

        .button {
            height: 48px;
            margin: 8px;
        }
    </style>
</head>
<body data-ios="<%= ios %>" data-android="<%= android %>">
<div class="box">
    <div>
        <a href="/">
            <img class="logo" src="<%= logo %>">
        </a>
        <p class="title"><%= this.__('install-app-title') %></p>
        <p class="subtitle"><%= this.__('install-app-text') %></p>
        <div>
            <a href="<%= ios %>" target="_blank">
                <img class="button" src="/images/ios-ru.svg">
            </a>
            <a href="<%= android %>" target="_blank">
                <img class="button" src="/images/android-ru.svg">
            </a>
        </div>
    </div>
</div>
<script>

    const ios = document.body.dataset.ios;
    console.log(ios);
    if (ios && navigator.userAgent.match(/iPhone|iPad|iPod/i)) {
        window.location.href = ios;
    }

    const android = document.body.dataset.android;
    console.log(android);
    if (android && navigator.userAgent.match(/Android/i)) {
        window.location.href = android;
    }

</script>
</body>
</html>
